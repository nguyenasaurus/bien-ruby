<h3>Add a new review<h3>

<%= form_for @review do |f| %>
    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label(:body, "Review")  %>
        <%= f.text_area :body %>
    </p>

    <p>
        <%= f.label :score %>
        <%= f.number_field :score %>
    </p>

    <p>
        <%= f.label(:restaurant, "Restaurant Name") %>
        <%= f.text_field :restaurant %>
    </p>

<%= f.submit "Save review" %>

<% end %>
